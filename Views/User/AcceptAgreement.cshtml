@model MealsToGo.ViewModels.UserAcceptanceViewModel


@{
    ViewBag.Title = "Accept Seller Agreement";
   
}
@{
    int UserID = 0;
  
    if (Request.IsAuthenticated)
    {
        UserID = WebSecurity.CurrentUserId;

    }

    string ctrName = ViewContext.RouteData.Values["controller"].ToString();
}
@using (Html.BeginForm("AcceptAgreement", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.ValidationSummary(false,"", new { @class = "error" })
   
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.AgreementID)
    <div class="cont-main">
        <h1>Accept Seller Agreement</h1>
        <div class="cont">
            <div class="cont-rit">
                <ul class="gen-form">
                    <li>
                        
                        @*@Html.DisplayFor(model => model.FirstName, new { @class = "gen-ftb" })*@
                        @Html.TextAreaFor(model => model.UserAgreement, new { @class = "gen-ftb", @readonly = "readonly", style = "width: 300px; height: 300px; background-color:#ccc;" })
                       
                    </li>
                    <li>
                        <label>

                            <input type="submit" name="button2" id="button2" value="Accept Agreement" class="submit" />
                           
                        </label>
                        <a href="#" class="menu-14u">@Html.ActionLink("Cancel", "Index", "MealAd", routeValues: new { userID = UserID }, htmlAttributes: null)</a></li>
                    <div class="clr"></div>
                </ul>


            </div>
            <div class="clr"></div>

        </div>

    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
